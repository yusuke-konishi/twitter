<div class="row">
  <div class="wrapper col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
    <p><%= notice %></p>

    <div class="timeline">
      <div class="pull-left">
        <img class="tweetarea-profile" src="<%= asset_path "profile.jpg" %>">
      </div>
      <div class="tweetarea-form">
        <%= form_for(@tweet, url: confirm_tweets_path) do |f| %>
          <%= f.text_area :content, :rows=>"3", class: 'form-control', :placeholder => "いまどうしてる？" %>
          <br>
          <div class="pull-right">
            <%= f.submit "ツイートする", class: 'btn btn-primary' %>
          </div>
          <span class="count pull-right"></span>
        <% end %>
      </div>
    </div>

    <% @tweets.each do |tweet| %>
      <div id="timeline-index" class="timeline">
        <div class="pull-left">
          <img class="timeline-profile" src="<%= asset_path "profile.jpg" %>">
        </div>
        <div class="timeline-tweet">
          <p><strong>あなた</strong> @you・<%= time_ago_in_words(tweet.created_at, include_seconds: true) %></p>
          <p><%= tweet.content %></p>
          <%= link_to "編集する", edit_tweet_path(tweet.id), method: :get, class: 'btn btn-success btn-sm' %>
          <%= link_to "削除する", tweet_path(tweet.id), method: :delete, data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger btn-sm btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top">▲</a></p>
</div>
